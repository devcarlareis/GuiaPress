<% - include partials/header.ejs -%>
<% - include partials/homenavbar.ejs %>

<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo!</h1>
            <p class="lead">Blog GuiaPress</p>
            <hr class="my-4">
            <p> Blog para criação de artigos </p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
        </div>
        <hr>

        <% articles.forEach(articles => { %>
            <div class="card">
                <div class="card-header">
                    <h2> <%= articles.title %> </h2>
                </div> <br>
                <div class="card-body">
                    <a href="#" class="btn btn-success">Ler Artigo</a>
                </div> <br>
            </div>

          %> }) %>

    </div>
</body>

